<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FrecuenciaCardiaca_RERM.MainPage">

    <StackLayout>
        <Frame BackgroundColor="#555" Padding="24" CornerRadius="0">
            <Label Text="Calcular tus pulsaciones" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>
        <Grid>
            <Label Grid.Row="0" Grid.Column="0" HorizontalOptions="Center" FontSize="23">Pulsaciones por minuto</Label>
            <Entry Placeholder="Ingrese tus pulsaciones" Margin="0,12,0,0" x:Name="PulsacionesMin" Keyboard="Numeric" ></Entry>
            <Label Grid.Row="1" Grid.Column="0" HorizontalOptions="Center" FontSize="23">Tu FCN</Label>
            <Entry Margin="0,12,0,0" x:Name="PulsacionesFin" IsEnabled="False"/>
            <Button Grid.Row="2" Grid.Column="0" Text="calcular" Clicked="btnCalcular"/>
        </Grid>
    </StackLayout>

</ContentPage>
